    "compare": { "method": "GET", "url": "/api/pricing/compare/:city" },
    "top_opportunities": { "method": "GET", "url": "/api/pricing/top-opportunities" }
  },

  "perplexity_pages": {
    "index": { "method": "GET", "url": "/api/perplexity/", "format": "HTML" },
    "complexes": { "method": "GET", "url": "/api/perplexity/complexes.html", "format": "HTML" },
    "opportunities": { "method": "GET", "url": "/api/perplexity/opportunities.html", "format": "HTML" },
    "stressed_sellers": { "method": "GET", "url": "/api/perplexity/stressed-sellers.html", "format": "HTML" },
    "decisions": { "method": "GET", "url": "/api/perplexity/decisions.html", "format": "HTML" },
    "hearings": { "method": "GET", "url": "/api/perplexity/hearings.html", "format": "HTML" },
    "developers": { "method": "GET", "url": "/api/perplexity/developers.html", "format": "HTML" },
    "kones": { "method": "GET", "url": "/api/perplexity/kones.html", "format": "HTML" },
    "transactions": { "method": "GET", "url": "/api/perplexity/transactions.html", "format": "HTML" },
    "news": { "method": "GET", "url": "/api/perplexity/news.html", "format": "HTML" },
    "regulations": { "method": "GET", "url": "/api/perplexity/regulations.html", "format": "HTML" },
    "city_page": { "method": "GET", "url": "/api/perplexity/city/:city.html", "format": "HTML" },
    "export_json": { "method": "GET", "url": "/api/perplexity/export.json", "format": "JSON" },
