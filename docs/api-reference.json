{
  "name": "QUANTUM - Pinuy Binuy Investment Analyzer API",
  "version": "4.10.0",
  "base_url": "https://pinuy-binuy-analyzer-production.up.railway.app",
  "description": "Full API reference for QUANTUM real estate intelligence platform. All endpoints return JSON unless noted otherwise.",

  "system": {
    "health": { "method": "GET", "url": "/health", "description": "System health check" },
    "debug": { "method": "GET", "url": "/debug", "description": "Debug info" },
    "diagnostics": { "method": "GET", "url": "/diagnostics", "description": "Full diagnostics" }
  },

  "projects": {
    "list": { "method": "GET", "url": "/api/projects", "params": { "city": "Filter by city", "status": "planning/approved/construction", "limit": "50", "offset": "0" } },
    "stats": { "method": "GET", "url": "/api/projects/stats" },
    "cities": { "method": "GET", "url": "/api/projects/cities" },
    "get_by_id": { "method": "GET", "url": "/api/projects/:id" },
    "transactions": { "method": "GET", "url": "/api/projects/:id/transactions" },
    "listings": { "method": "GET", "url": "/api/projects/:id/listings" },
    "benchmark": { "method": "GET", "url": "/api/projects/:id/benchmark" }
  },

  "opportunities": {
    "top_investments": { "method": "GET", "url": "/api/opportunities", "description": "Top investments by IAI score" },
    "stressed_sellers": { "method": "GET", "url": "/api/stressed-sellers", "description": "Distressed sellers by SSI" },
    "dashboard": { "method": "GET", "url": "/api/dashboard" }
  },

  "kones_receivership": {
    "status": { "method": "GET", "url": "/api/kones/status" },
    "listings": { "method": "GET", "url": "/api/kones/listings", "params": { "limit": "100", "offset": "0" } },
    "import": { "method": "POST", "url": "/api/kones/import", "body": { "listings": [{ "propertyType": "דירה", "city": "תל אביב", "address": "הרצל 10" }] } },
    "stats": { "method": "GET", "url": "/api/kones/stats" },
    "search_city": { "method": "GET", "url": "/api/kones/search/city/:city" },
    "search_region": { "method": "GET", "url": "/api/kones/search/region/:region" },
    "search_gush": { "method": "GET", "url": "/api/kones/search/gush/:gush?helka=123" },
    "check_address": { "method": "POST", "url": "/api/kones/check-address", "body": { "city": "תל אביב", "street": "הרצל" } },
    "match_complexes": { "method": "GET", "url": "/api/kones/match-complexes" },
    "enhance_ssi": { "method": "POST", "url": "/api/kones/enhance-ssi/:complexId" },
    "scan_all": { "method": "POST", "url": "/api/kones/scan-all" },
    "urgent": { "method": "GET", "url": "/api/kones/urgent" },
    "scan_complexes": { "method": "POST", "url": "/api/kones/scan-complexes", "body": { "limit": 10, "minIAI": 50, "city": null } },
    "scan_city": { "method": "POST", "url": "/api/kones/scan-city", "body": { "city": "בת ים", "streets": "" } },
    "scan_status": { "method": "GET", "url": "/api/kones/scan-status" }
  },

  "ssi_distress": {
    "status": { "method": "GET", "url": "/api/ssi/status" },
    "enhance": { "method": "POST", "url": "/api/ssi/enhance/:complexId" },
