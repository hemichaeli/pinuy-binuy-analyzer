  "pricing": {
    "city": { "method": "GET", "url": "/api/pricing/city/:city" },
    "benchmark": { "method": "POST", "url": "/api/pricing/benchmark/:complexId" },
    "sold": { "method": "GET", "url": "/api/pricing/sold/:city" },
    "index": { "method": "GET", "url": "/api/pricing/index/:city" },
