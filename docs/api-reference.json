  "news": {
    "rss": { "method": "GET", "url": "/api/news/rss" },
    "search_complex": { "method": "GET", "url": "/api/news/search/complex/:id" },
    "regulation": { "method": "GET", "url": "/api/news/regulation" },
    "tama38": { "method": "GET", "url": "/api/news/tama38" },
    "tax_changes": { "method": "GET", "url": "/api/news/tax-changes" },
    "scan": { "method": "POST", "url": "/api/news/scan" }
