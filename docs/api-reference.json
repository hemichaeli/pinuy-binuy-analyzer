  "admin": {
    "migrate": { "method": "POST", "url": "/api/admin/migrate" },
    "schema": { "method": "GET", "url": "/api/admin/schema/:table" },
    "sql": { "method": "POST", "url": "/api/admin/sql" },
    "duplicates": { "method": "GET", "url": "/api/admin/duplicates" },
    "dedup": { "method": "POST", "url": "/api/admin/dedup" },
    "stats": { "method": "GET", "url": "/api/admin/stats" }
